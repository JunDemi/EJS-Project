<!DOCTYPE html>
<%-include ('header') %>
<script type="text/javascript">
    $(function() {
        $("#image").on('change', function(){
        readURL(this);
        });
    });
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
            $('#View').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
    <div class="container mt-4 myform">
        <div class="main_title">
            회원가입
        </div>
        <form name="regist_form" action="/auth/register" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="image" class="form-label">프로필 사진</label>
                <div class="img_container">
                    <img id="View"/>
                </div>
                <input type="file" id="image" name="image">
            </div>
            <div class="mb-3">
                <label for="id" class="form-label">아이디</label>
                <input type="text" class="form-control regist_text" id="id" name="id" >
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">이름</label>
                <input type="text" class="form-control regist_text" id="name" name="name" >
            </div>
            <div class="mb-3">
                <label for="pw" class="form-label">비밀번호</label>
                <input type="password" class="form-control regist_text" id="pw" name="pw">
            </div>
            <div class="mb-3">
                <label for="pw_check" class="form-label">비밀번호 확인</label>
                <input type="password" class="form-control regist_text" id="pw_check" name="pw_check">
            </div>
            <input type="submit" class="btn btn-primary" value="가입">
        </form>
        <% if(locals.message) { %>
            <h5 class="alert-regist"><%=locals.message %></h5>
        <% } %>
    </div>
